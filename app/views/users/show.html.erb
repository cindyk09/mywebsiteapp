<div class="container">
<br>
<br>
<br>
	<h1 class="module-title align-center font-alt">Dashboard</h1>

<!-- COMPONENTS -->
    <div class="row">

      <div class="col-sm-8 col-sm-offset-2">

        <!-- CONTENT BOXES -->
        <h4 class="font-alt"><%= current_user.name %></h4>
        <hr class="d ivider-w m-t-10 m-b-20">

        <div class="row multi-columns-row">
          <!-- CONTENT BOX -->
          <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="content-box">
              <div class="content-box-icon">
                <span class="icon-video"></span>
              </div>
              <div class="content-box-title font-inc font-uppercase">
                NEW PROJECT?
              </div>
              <div class="content-box-text">
                <%= link_to 'Add New Project', new_project_path, class: "btn btn-success btn-round btn-xs" %>
              </div>
            </div>
          </div>
          <!-- /CONTENT BOX -->

          <!-- CONTENT BOX -->
          <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="content-box">
              <div class="content-box-icon">
                <span class="icon-camera"></span>
              </div>
              <div class="content-box-title font-inc font-uppercase">
                All projects
              </div>
              <div class="content-box-text">
                <% current_user_projects.each do |project| %>
                <div id="project<%= project.id%>">
                  <%= link_to project.name, project_path(project) %>
                  <%= link_to 'Edit', edit_project_path, class: "btn btn-warning btn-round btn-xs"%>
                  <% if logged_in_and_admin %>
                  <%= link_to "Delete", project_path(project), remote: true, method: :delete, class: "btn btn-danger btn-round btn-xs"%>
                  <% end %><br><br>
                </div>
                <% end %>
              </div>
            </div>
          </div>
          <!-- /CONTENT BOX -->

        </div>
        <!-- /CONTENT BOXES -->

      </div>

      </div>

</section>
<!-- / COMPONENTS  -->
