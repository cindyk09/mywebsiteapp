<!-- HOME -->
<section class="module module-header" data-background=<%= asset_path "email.jpg"%>>

  <div class="container">

    <!-- MODULE TITLE -->
    <div class="row">

      <div class="col-sm-6 col-sm-offset-3">

        <h1 class="module-title font-alt align-center"></h1>
        <br>
        <br>

        <div class="module-subtitle font-inc align-center">


        </div>

      </div>

    </div>
    <!-- /MODULE TITLE -->
    </div>

  </section >
  <!-- /HOME -->

    <!-- WRAPPER -->
  	<div class="wrapper">

  		<!-- CONTACT -->
  		<section class="module">

  				<!-- MODULE TITLE -->
  				<div class="row">

  					<div class="col-sm-6 col-sm-offset-3">

  						<h2 class="module-title align-center font-alt">Get in touch</h2>

  						<div class="module-subtitle align-center font-inc">
  							Don't be a stranger.
  						</div>

  					</div>

  				</div>
  				<!-- /MODULE TITLE -->


  				<!-- CONTACT FORM -->
  				<div id="content" class="row">

            <div id="flash_messages" class="col-sm-4 col-sm-offset-4 align-center font-alt">
              <% if flash[:danger] %>
              <%= flash[:danger]%>
              <%end%>
            </div>

            <div class="col-sm-6 col-sm-offset-3">
              <%= form_for @contact, url: contacts_path, remote: true do |f| %>

                    <div class="form-group">
                      <%= f.text_field :name, class:"form-control", placeholder: "Name" %>
                    </div>

                    <div class="form-group">
                      <%= f.email_field :email, class:"form-control", placeholder: "Email"%>
                    </div>

                    <div class="form-group">
                      <%= f.text_area :message, class:"form-control", placeholder: "Message", style: "height:200px;"%>
                    </div>

                <div class="submit align-right">
  							  <button type="submit" class="btn btn-d btn-round btn-sm">Send</button>
                </div>

  						<!-- Ajax response -->
  						<div id="contact-response" class="ajax-response font-alt"></div>
              <% end %>

  					</div>

  				</div>
  				<!-- /CONTACT FORM -->

      </div>
      <!-- /WRAPPER -->
