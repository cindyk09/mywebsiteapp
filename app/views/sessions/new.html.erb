<div class="container">
<br>
<br>
<br>
	<h1 class="module-title align-center font-alt">Login</h1>

  <div id="flash_messages" class="col-sm-4 col-sm-offset-4 align-center">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, :class => "flash #{key}") %>
    <% end %>
  </div>

  <div class="form-group align-right">
		<%= form_tag login_path do %>

		<div class="form-group col-sm-4 col-sm-offset-4">
			Email: <%= text_field_tag :email%><br>
		</div>

		<div class="form-group col-sm-4 col-sm-offset-4">
			Password: <%= password_field_tag :password%><br>
		</div>

		<div class="submit col-sm-4 col-sm-offset-4">
			<br>
			<button type="submit" class="btn btn-d btn-round btn-sm">Log In</button>
		</div>
			<% end %>
  	</div>
	</div>
</div>
