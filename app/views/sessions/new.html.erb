<div class="container">
<br>
<br>
<br>
	<h1 class="module-title align-center font-alt">Login</h1>

<div id="flash_messages" class="col-sm-4 col-sm-offset-4 align-center font-alt">
	<% flash.each do |key, value| %>
		<%= content_tag(:div, value, :class => "flash #{key}") %>
	<% end %>
</div>


  <div class="form-group col-sm-4 col-sm-offset-4">
		<%= form_for @user, url: login_path do |f| %>

		<div class="form-group">
			<%= f.email_field :email, class:"form-control", placeholder: "E-mail"%>
		</div>

		<div class="form-group">
			<%= f.password_field :password, class:"form-control", placeholder: "Password" %>
		</div>

		<div class="submit col-sm-4 col-sm-offset-4">
			<br>
			<button type="submit" class="btn btn-d btn-round btn-sm">Log In</button>
		</div>
			<% end %>
  	</div>
	</div>
</div>
