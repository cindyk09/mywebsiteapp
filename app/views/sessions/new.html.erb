<div class="container">
<br>
<br>
<br>
	<h1 class="module-title align-center font-alt">Login</h1>

  <div id="flash_messages">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, :class => "flash #{key}") %>
    <% end %>
  </div>

  <div class="form-group align-center">

  <%= form_for @user do |f| %>

    <div class="col-sm-4 col-sm-offset-4">

      <div class="form-group">
          <%= f.text_field :name, class:"form-control", id:"name", placeholder:"Name"  %>
      </div>

      <div class="form-group">
          <%= f.password_field :password, class:"form-control", id:"password", placeholder:"Password" %>
      </div>

      <div class="submit align-center">
        <br>
        <button type="submit" class="btn btn-d btn-round btn-sm">Log In</button>
      </div>
  <% end %>
    </div>

  </div>
  </div>
